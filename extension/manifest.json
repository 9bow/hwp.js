{
  "manifest_version": 2,
  "name": "hwp.js",
  "version": "1.0",
  "description": "hwp web viewer",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "storage",
    "http://*/*.hwp",
    "https://*/*.hwp",
    "file://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "content/viewer.html",
      "http:/*",
      "https:/*",
      "ftp:/*",
      "file:/*",
      "chrome-extension:/*",
      "blob:*",
      "data:*",
      "filesystem:/*",
      "drive:*"
  ]
}
